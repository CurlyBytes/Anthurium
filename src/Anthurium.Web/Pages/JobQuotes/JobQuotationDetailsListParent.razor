@inject Services.IJobQuotationService jobQuotation
@inject Blazored.SessionStorage.ISessionStorageService sessionStorage
@using Anthurium.API.Dtos
@using Models

<div class="container">
    @if (isRendered)
    {
        <CascadingValue Value="@this">
            @ChildContent
        </CascadingValue>
    }
    else
    {
        <p><em>Loading...</em></p>
    }
</div>

@code {
    private bool isRendered = false;

    public ListPrefs listPrefs = new ListPrefs();

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var prefs = await sessionStorage.GetItemAsync<ListPrefs>("listPrefsJobQuotationDetails");
            if (prefs != null)
                listPrefs = prefs;
        }
        isRendered = true;
        StateHasChanged();
    }

    public async Task SavePrefsAsync()
    {
        await sessionStorage.SetItemAsync("listPrefsJobQuotationDetails", listPrefs);
    }
}
